<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GrayHeadText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
    </style>

</resources>
